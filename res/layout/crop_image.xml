<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.votbar.view"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/action"
		android:layout_alignParentBottom="true">
		<Button android:text="@string/select" android:id="@+id/select"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_margin="5dp"></Button>
		<Button android:text="@string/cancle" android:id="@+id/cancle"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_margin="5dp"></Button>
	</LinearLayout>
	<com.votbar.view.CropImageView
		android:id="@+id/crop" android:layout_width="fill_parent"
		android:layout_height="fill_parent" app:width="300" app:height="300"
		android:layout_above="@id/action" />
</RelativeLayout>
